{
	"extends": "astro/tsconfigs/strictest",
	"compilerOptions": {
		"exactOptionalPropertyTypes": false,

		"jsx": "react-jsx",
		"jsxImportSource": "@builder.io/qwik",

		"plugins": [
			{
				"name": "@astrojs/ts-plugin"
			}
		],

		"baseUrl": ".",
		"paths": {
			"@/*": ["src/*"]
		}
	},
	"exclude": ["**/node_modules", "**/dist"]
}
