---
import { Icon } from "astro-icon/components";

import * as styles from "./Links.css";

const links = [
	{
		title: "GitHub",
		href: "https://github.com/shun-shobon",
		icon: "simple-icons:github",
	},
	{
		title: "X",
		href: "https://x.com/shun_shobon",
		icon: "simple-icons:x",
	},
];
---

<ul class={styles.links}>
	{
		links.map((link) => (
			<li>
				<a href={link.href} target="_blank" class={styles.link}>
					<Icon name={link.icon} aria-label={link.title} />
				</a>
			</li>
		))
	}
</ul>
